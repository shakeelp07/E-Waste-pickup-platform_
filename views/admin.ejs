<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - E-Waste Pickup</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .admin-container {
            background: rgba(255,255,255,0.95);
            padding: 2rem 2.5rem;
            border-radius: 20px;
            box-shadow: 0 8px 32px 0 rgba(55, 119, 239, 0.15);
            border: 1.5px solid rgba(55, 119, 239, 0.18);
            max-width: 1100px;
            width: 100%;
            margin: 2rem auto;
        }
        h2 {
            text-align: center;
            margin-bottom: 2rem;
            color: #2d3e50;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1.5rem;
        }
        th, td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e0e0e0;
            text-align: left;
        }
        th {
            background: #3777ef;
            color: #fff;
            font-weight: 600;
        }
        tr:last-child td {
            border-bottom: none;
        }
        .status {
            padding: 0.3em 0.8em;
            border-radius: 12px;
            font-size: 0.95em;
            font-weight: 600;
        }
        .status.Pending { background: #ffe082; color: #b28900; }
        .status.Completed { background: #b9f6ca; color: #00695c; }
        .status.Assigned { background: #b3e5fc; color: #01579b; }
        .status.Cancelled { background: #ffcdd2; color: #b71c1c; }
        @media (max-width: 900px) {
            .admin-container { padding: 1rem 0.5rem; }
            table, th, td { font-size: 0.95em; }
        }
        @media (max-width: 600px) {
            table, thead, tbody, th, td, tr { display: block; }
            th { position: absolute; left: -9999px; top: -9999px; }
            tr { margin-bottom: 1.2rem; border-radius: 10px; box-shadow: 0 2px 8px #e0e0e0; background: #fff; }
            td { border: none; position: relative; padding-left: 50%; min-height: 40px; }
            td:before {
                position: absolute;
                top: 0; left: 0; width: 45%; padding-left: 1rem;
                white-space: nowrap;
                font-weight: 600;
                color: #3777ef;
            }
            td:nth-of-type(1):before { content: "Name"; }
            td:nth-of-type(2):before { content: "Email"; }
            td:nth-of-type(3):before { content: "Address"; }
            td:nth-of-type(4):before { content: "Phone"; }
            td:nth-of-type(5):before { content: "Item Type"; }
            td:nth-of-type(6):before { content: "Quantity"; }
            td:nth-of-type(7):before { content: "Status"; }
            td:nth-of-type(8):before { content: "Requested At"; }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <h2>Admin Dashboard - E-Waste Pickup Requests</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Item Type</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Requested At</th>
                </tr>
            </thead>
            <tbody>
                <% if (requests && requests.length > 0) { %>
                    <% requests.forEach(function(request) { %>
                        <tr>
                            <td><%= request.name %></td>
                            <td><%= request.email %></td>
                            <td><%= request.address %></td>
                            <td><%= request.phone %></td>
                            <td><%= request.itemType %></td>
                            <td><%= request.quantity %></td>
                            <td><span class="status <%= request.status %>"><%= request.status %></span></td>
                            <td><%= new Date(request.createdAt).toLocaleString() %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="8" style="text-align:center; color:#888;">No requests found.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
